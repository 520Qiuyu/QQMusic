{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": ["./*.ts"],
  "ts-node": {
    "files": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}